@model List<LibraryManagementAssignment.ViewModels.BookViewModel>
<h2>Books</h2>
<a href="@Url.Action("Create", "Book")" class="btn btn-primary">Create Book</a>

<table class="table">
    <thead>
    <tr>
        <th>Book Id</th>
        <th>Title</th>
        <th>Author Name</th>
        <th>Branch Name</th>
        <th>Delete Action</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var book in Model)
    {
        <tr>
            <td>
                <a href="@Url.Action("Edit", "Book", new { id = book.BookId })">@book.BookId</a>
            </td>
            <td>@book.Title</td>
            <td>@book.AuthorName</td>
            <td>@book.BranchName</td>
            <td>
                <form asp-action="Delete" asp-controller="Book" asp-route-id="@book.BookId" method="post" onsubmit="return confirm('Are you sure you want to delete this book?');">
                    <button type="submit" class="btn btn-danger">
                        DELETE
                    </button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>