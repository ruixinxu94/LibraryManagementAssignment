@model LibraryManagementAssignment.ViewModels.BookCreateEditViewModel

<h2>Edit Book</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="BookId" />
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control"/>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AuthorId">Author</label>
        <select asp-for="AuthorId" class="form-control" asp-items="@Model.Authors.Select(a => new SelectListItem(a.Name, a.Id.ToString()))"></select>
    </div>
    <div class="form-group">
        <label asp-for="LibraryBranchId">Library Branch</label>
        <select asp-for="LibraryBranchId" class="form-control" asp-items="@Model.LibraryBranches.Select(b => new SelectListItem(b.BranchName, b.LibraryBranchId.ToString()))"></select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>