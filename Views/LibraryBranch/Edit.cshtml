@model LibraryManagementAssignment.ViewModels.LibraryBranchModel

<h2>Edit Library Branch</h2>
<form asp-action="Edit">
    <input type="hidden" asp-for="LibraryBranchId" />
    <div class="form-group">
        <label asp-for="BranchName" class="control-label"></label>
        <input asp-for="BranchName" class="form-control" />
        <span asp-validation-for="BranchName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
<script>
document.addEventListener("DOMContentLoaded", function() {
    @if (TempData["ErrorMessage"] != null)
    {
        @:var message = "@Html.Raw(TempData["ErrorMessage"])";
        @:alert(message);
    }
});
</script>